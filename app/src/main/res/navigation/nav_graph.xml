<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreenFragment">
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.grocer21.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/navigationDrawer"
        android:name="com.example.grocer21.NavigationDrawer"
        android:label="activity_navigation_drawer"
        tools:layout="@layout/activity_navigation_drawer"/>
    <fragment
        android:id="@+id/foodFragment"
        android:name="com.example.grocer21.FoodFragment"
        android:label="fragment_database_list"
        tools:layout="@layout/fragment_food_list">
        <action
            android:id="@+id/action_foodFragment_to_mainActivity"
            app:destination="@+id/navigationDrawer"
            app:popUpTo="@id/homeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/helpDialogFragment"
        android:name="com.example.grocer21.HelpDialogFragment"
        android:label="HelpDialogFragment">
        <action
            android:id="@+id/action_helpDialogFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:popUpTo="@+id/homeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.grocer21.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_helpDialogFragment"
            app:destination="@id/helpDialogFragment" />
    </fragment>
</navigation>