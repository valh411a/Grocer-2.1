<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreenFragment">
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.grocer21.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.grocer21.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/helpDialogFragment"
        android:name="com.example.grocer21.HelpDialogFragment"
        android:label="HelpDialogFragment" >
        <action
            android:id="@+id/action_helpDialogFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>
    <activity
        android:id="@+id/navigationDrawer"
        android:name="com.example.grocer21.NavigationDrawer"
        android:label="activity_navigation_drawer"
        tools:layout="@layout/activity_navigation_drawer" />
    <fragment
        android:id="@+id/foodFragment"
        android:name="com.example.grocer21.FoodFragment"
        android:label="fragment_database_list"
        tools:layout="@layout/fragment_database_list" >
        <action
            android:id="@+id/action_foodFragment_to_navigationDrawer"
            app:destination="@id/navigationDrawer" />
    </fragment>
    <fragment
        android:id="@+id/allergyFragment"
        android:name="com.example.grocer21.AllergyFragment"
        android:label="fragment_allergy_list"
        tools:layout="@layout/fragment_allergy_list" >
        <action
            android:id="@+id/action_allergyFragment_to_navigationDrawer"
            app:destination="@id/navigationDrawer" />
    </fragment>
    <fragment
        android:id="@+id/dietFragment"
        android:name="com.example.grocer21.DietFragment"
        android:label="fragment_diet_list"
        tools:layout="@layout/fragment_diet_list" >
        <action
            android:id="@+id/action_dietFragment_to_navigationDrawer"
            app:destination="@id/navigationDrawer" />
    </fragment>
    <fragment
        android:id="@+id/dietItemFragment"
        android:name="com.example.grocer21.DietItemFragment"
        android:label="fragment_diet_item"
        tools:layout="@layout/fragment_diet_item" >
        <action
            android:id="@+id/action_dietItemFragment_to_dietFragment"
            app:destination="@id/dietFragment" />
        <action
            android:id="@+id/action_dietItemFragment_to_foodItemFragment"
            app:destination="@id/foodItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodItemFragment"
        android:name="com.example.grocer21.FoodItemFragment"
        android:label="fragment_food_item"
        tools:layout="@layout/fragment_food_item" >
        <action
            android:id="@+id/action_foodItemFragment_to_foodFragment"
            app:destination="@id/foodFragment" />
        <action
            android:id="@+id/action_foodItemFragment_to_dietItemFragment"
            app:destination="@id/dietItemFragment" />
    </fragment>
</navigation>